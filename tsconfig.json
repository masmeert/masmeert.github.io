{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*.astro"
			],
			"@layouts/*": [
				"src/layouts/*.astro"
			],
			"@data/*": [
				"src/data/*.json"
			],
		},
  }
}
